            {
                title: 'Right Axis Title',
                format: '#\'%\'',
                gridlines: { color: '#333' },
                textStyle: {
                    color: 'red'
                }
            }
            ],
            hAxis: {
                title: "",
                slantedText: true
            },
            seriesType: "bars",
            isStacked: true,
            series: {
                5: {
                    targetAxisIndex: 1,
                    type: "line"
                },
                6: {
                    targetAxisIndex: 1,
                    type: "line"
                }
            }
        };

        var chart = new google.visualization.ComboChart(document.getElementById('chart-03'));
        chart.draw(data, options);
    }
</script>
