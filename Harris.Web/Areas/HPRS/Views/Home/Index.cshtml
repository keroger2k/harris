            ['HFY11-P06', 469, 53, 1486, 133, 2653, 98.5, 100.0],
            ['HFY11-P07', 543, 47, 1397, 134, 2366, 98.5, 100.0],
            ['HFY11-P08', 522, 54, 1473, 135, 2590, 98.5, 99.0],
            ['HFY11-P09', 566, 54, 1473, 135, 2590, 98.5, 90.0],
            ['HFY11-P10', 512, 54, 1473, 135, 2590, 98.5, 91.0],
            ['HFY11-P11', 599, 54, 1473, 135, 2590, 98.5, 95.0],
            ['HFY11-P12', 666, 54, 1473, 135, 2590, 98.5, 94.0],
